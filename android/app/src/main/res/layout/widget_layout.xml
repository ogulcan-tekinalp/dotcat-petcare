<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/widget_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@drawable/widget_background">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">
        
        <ImageView
            android:id="@+id/widget_icon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@mipmap/ic_launcher"
            android:contentDescription="App icon"/>
        
        <TextView
            android:id="@+id/widget_title"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginStart="8dp"
            android:text="DOTCAT"
            android:textColor="#2D3436"
            android:textSize="14sp"
            android:textStyle="bold"/>
        
        <TextView
            android:id="@+id/pending_badge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/badge_background"
            android:paddingHorizontal="8dp"
            android:paddingVertical="2dp"
            android:text="0"
            android:textColor="#FFFFFF"
            android:textSize="12sp"
            android:textStyle="bold"/>
    </LinearLayout>

    <!-- Divider -->
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginVertical="12dp"
        android:background="#E0E0E0"/>

    <!-- Tasks List Container -->
    <LinearLayout
        android:id="@+id/tasks_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="vertical">
        
        <!-- Task items will be added dynamically -->
        <TextView
            android:id="@+id/task_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_task_pending"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textColor="#636E72"
            android:textSize="13sp"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/task_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_task_pending"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textColor="#636E72"
            android:textSize="13sp"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/task_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableStart="@drawable/ic_task_pending"
            android:drawablePadding="8dp"
            android:ellipsize="end"
            android:maxLines="1"
            android:paddingVertical="4dp"
            android:textColor="#636E72"
            android:textSize="13sp"
            android:visibility="gone"/>
        
        <TextView
            android:id="@+id/empty_state"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Bugün görev yok"
            android:textColor="#9E9E9E"
            android:textSize="13sp"/>
    </LinearLayout>

    <!-- Footer -->
    <TextView
        android:id="@+id/last_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:gravity="end"
        android:text="Son güncelleme: --:--"
        android:textColor="#BDBDBD"
        android:textSize="10sp"/>

</LinearLayout>


